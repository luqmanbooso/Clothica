{
  "name": "clothica-ecommerce",
  "version": "1.0.0",
  "description": "A modern MERN stack e-commerce clothing store",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "create-admin": "node server/scripts/createAdmin.js",
    "create-products": "node server/scripts/createRealProducts.js",
    "create-coupons": "node server/scripts/createRealCoupons.js",
    "create-sample-data": "node server/scripts/createSampleProducts.js && node server/scripts/createSampleCoupons.js"
  },
  "keywords": ["ecommerce", "mern", "react", "clothing", "tailwind"],
  "author": "Clothica Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
} 